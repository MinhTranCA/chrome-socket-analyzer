/* This file needs to live at the root of the extension */
{
  "name": "WebSocket Analyzer",
  "description": "Displays realtime view of socket traffic",
  "version": "0.1",
  "permissions": [
    "debugger"
  ],
  "devtools_page": "panel/panel.html",
  "web_accessible_resources": [
    "*"
  ],
  "content_scripts": [
    {
      "run_at":"document_start",
      "matches": ["http://*/*"],
      "js": ["content/injector.js"]
    }
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "manifest_version": 2
}