/* This file needs to live at the root of the extension */
{
  "name": "WebSocket Analyzer",
  "description": "Displays realtime view of socket traffic",
  "version": "0.1",
  "permissions": [
    "debugger"
  ],
  "devtools_page": "DevToolsPanel/Panel.html",
  "web_accessible_resources": [
    "*",
    "Analyzer/SocketSniffer.js"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2
}